<%= simple_form_for(recipe) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :name, input_html: { class: 'col-4'} %>
  </div>

  <div class="field">
    <%= f.input :time %>
  </div>

  <div class="field">
    <%= f.input :season, collection: @seasons, input_html: { class: "select-2" } %>
  </div>

  <div class="check-box-field">
    <%= f.input :favorite, as: :boolean, boolean_style: :nested %>
  </div>

  <div class="field">
    <%= f.input :main_ingredient, collection: @main_ingredients, input_html: { class: "select-2" } %>
  </div>
  <div class="row pb-5 pt-3">
    <div class="col-12">
      <h3>Ingredients</h3>
    </div>
    <div class="col-12">
      <div class="field">
        <%= f.collection_select :ingredients, Ingredient.all, :name, :name, {}, {class: "ingredient-select", multiple: true} %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
<%= javascript_tag("ingredient.init(#{@ingredients.map(&:to_json)})") %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Time:</strong>
  <%= @recipe.time %>
</p>

<p>
  <strong>Season:</strong>
  <%= @recipe.season %>
</p>

<p>
  <strong>Favorite:</strong>
  <%= @recipe.favorite %>
</p>

<p>
  <strong>Main Ingredient:</strong>
  <%= @recipe.main_ingredient %>
</p>
<h3>Ingredients</h3>
<% @recipe.ingredients.each do |ingredient| %>
